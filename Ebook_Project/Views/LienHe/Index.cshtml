<script>
        document.addEventListener('DOMContentLoaded', function () {
            var form = document.querySelector('.wpcf7-form');
            var inputs = form.querySelectorAll('.wpcf7-form-control');

            inputs.forEach(function (input) {
                input.addEventListener('blur', function () {
                    console.log('Validating input for:', input.name);
                    validateInput(input);
                });
            });

            function validateInput(input) {
                var value = input.value.trim();
                var parent = input.closest('.wpcf7-form-control-wrap');
                var errorDiv = parent.querySelector('.text-red-500');

                if (value === '') {
                    if (!errorDiv) {
                        showErrorMessage(parent, 'Mục này là bắt buộc.');
                    }
                } else {
                    if (errorDiv) {
                        hideErrorMessage(parent);
                    }
                }
            }

            function showErrorMessage(parent, message) {
                var errorDiv = document.createElement('div');
                errorDiv.className = 'text-red-500 text-[12px] mt-1';
                errorDiv.textContent = message;
                parent.appendChild(errorDiv);
            }

            function hideErrorMessage(parent) {
                var errorDiv = parent.querySelector('.text-red-500');
                if (errorDiv) {
                    parent.removeChild(errorDiv);
                }
            }
        });
</script>
